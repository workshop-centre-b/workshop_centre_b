<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Centre B
            {% endblock %}
        </title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </head>
    <body>
    <header>
        <div id="header_top">
            <h1>Centre B : Self-service</h1>
            <h2>
                {% block page_name %}
                {% endblock %}
            </h2>
            <div id="user">
            {% if app.user %}
                <a href=""> {{app.user.nom}} · {{app.user.prenom}}
                {% for role in app.user.roles %}
                <span>{{ role }}</span>
                {% endfor %}
                </a>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                </svg>
            {% endif %}
            </div>
        </div>
    </header>
    <div id="container">
        <aside id="header_left">
            <img id="header_logo" src="{{ asset('images/logo.png')}}" alt="logo" href="{{ path('home')}}">
            <a href="{{ path('home')}}">Accueil</a>
            {% if app.user %}
                {% if is_granted('ROLE_STUDENT') %}
                    <a href="">Inscription</a>
                {% elseif is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_user_index')}}">Gestion Utilisateurs</a>
                    <a href="{{ path('app_user_new')}}">Créer compte</a>
                {% endif %}
                <a href="{{ path('app_logout') }}"> Déconnexion </a>
            {% else %}
                <a href="{{ path('app_login') }}">Connexion</a>
            {% endif %}
        </aside>
        <main>
            {% block body %}{% endblock %}
        </main>
    </div>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>
