{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}
{%block page_name %} {{ user.nom}} {{user.prenom}} {% endblock %}

{% block body %}

    <style>
    div {
        display: flex;
        margin: 10px;
    }

    div a {
        margin-right: 10px;
    }
    </style>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Formation</th>
                <td>{{ user.formation }}</td>
            </tr>
        </tbody>
    </table>

    <div>
    <a href="{{ path('app_user_index') }}" class="btn btn-primary">Retour liste utilisateurs</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
